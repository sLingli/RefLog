<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ðŸŸ¢ å›¾å±‚ Aï¼šå‡†å¤‡é˜¶æ®µ (Ready Mode) -->
    <RelativeLayout
        android:id="@+id/layoutReady"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- 1. é¡¶éƒ¨ï¼šå®žæ—¶ç³»ç»Ÿæ—¶é—´ -->
        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:format12Hour="HH:mm"
            android:format24Hour="HH:mm"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- 2. ä¸­é—´ï¼šçƒåœºä¸Ž START æŒ‰é’® -->
        <FrameLayout
            android:id="@+id/fieldContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <!-- è¶³çƒåœºå›¾ -->
            <ImageView
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_football_field" />

            <!-- ç¼©å°åŽçš„ä¸­åœˆ START æŒ‰é’® -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBigStart"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:text="@string/btn_start"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:cornerRadius="38dp"
                app:backgroundTint="#00E676" />
        </FrameLayout>

        <!-- 3. åº•éƒ¨ï¼šåŽ†å²è®°å½•å°æ¨ªæ¡ -->
        <View
            android:id="@+id/btnHistorySmall"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:background="#666666" />
    </RelativeLayout>


    <!-- ðŸ”´ å›¾å±‚ Bï¼šæ¯”èµ›é˜¶æ®µ (Running Mode) - ç»´æŒä½ ä¹‹å‰çš„å®Œç¾Žé€»è¾‘ -->
    <RelativeLayout
        android:id="@+id/layoutRunning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/touchOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <!-- 1. æ ¸å¿ƒè®¡æ—¶åŒº (ç»å¯¹å±…ä¸­) -->
        <LinearLayout
            android:id="@+id/timerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/mainTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:textSize="64sp"
                android:fontFamily="monospace"
                android:includeFontPadding="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stoppageTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:textColor="#888888"
                app:drawableStartCompat="@drawable/more_time"
                android:drawablePadding="6dp"
                android:drawableTint="#888888"
                android:background="@drawable/bg_stoppage_capsule"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- 2. æŽ§åˆ¶é¢æ¿ -->
        <LinearLayout
            android:id="@+id/controlPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="8dp"
            android:background="#CC000000"
            android:translationY="200dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPauseRound"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="30dp"
                app:backgroundTint="#D32F2F"
                app:icon="@drawable/pause_circle"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:layout_marginEnd="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEndRound"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_end_button_progress"
                app:backgroundTint="@null"
                app:icon="@drawable/stop_circle"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />
        </LinearLayout>
    </RelativeLayout>


    <!-- âš ï¸ å…¼å®¹æ€§å ä½ç¬¦ï¼šå…³é”®ï¼ç±»åž‹å¿…é¡»æ­£ç¡® -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/endHalfButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

</RelativeLayout>