<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#1E1E1E"
    android:gravity="center">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTeamSelectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择队伍"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- 队伍按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 主队按钮 (ic_home) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHomeTeam"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text=""
            app:icon="@drawable/ic_home"
            app:iconSize="40dp"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#1565C0"
            app:cornerRadius="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

        <!-- 客队按钮 (ic_flight) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAwayTeam"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text=""
            app:icon="@drawable/ic_flight"
            app:iconSize="40dp"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#C62828"
            app:cornerRadius="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

    </LinearLayout>

    <!-- 取消按钮 (outline_close) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelTeam"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:icon="@drawable/outline_close_24"
        app:iconSize="28dp"
        app:iconGravity="textStart"
        app:iconTint="#AAAAAA"
        app:backgroundTint="#333333"
        app:cornerRadius="30dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp" />

</LinearLayout>