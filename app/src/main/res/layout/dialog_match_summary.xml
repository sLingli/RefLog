<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比赛总结"
            android:textColor="#00FF00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_trophy"
            android:drawablePadding="8dp"
            android:drawableTint="#00FF00" />

        <!-- 统计面板：使用单独的 TextView 以支持 Vector Drawable -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:strokeColor="#333333"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- 比赛时长 -->
                <TextView
                    android:id="@+id/tvStatMatchTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_history"
                    android:drawablePadding="8dp"
                    android:drawableTint="#AAAAAA"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:text="时长: 每半场 45分" />

                <!-- 进球统计 -->
                <TextView
                    android:id="@+id/tvStatGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableStart="@drawable/sports_soccer"
                    android:drawablePadding="8dp"
                    android:drawableTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:text="总进球: 0" />

                <!-- 红黄牌统计 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStatYellow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_card"
                        android:drawablePadding="8dp"
                        android:drawableTint="#FFEB3B"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:text="黄牌: 0" />

                    <TextView
                        android:id="@+id/tvStatRed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_card"
                        android:drawablePadding="8dp"
                        android:drawableTint="#F44336"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:text="红牌: 0" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333333" android:layout_marginVertical="8dp"/>

                <!-- 补时统计 -->
                <TextView
                    android:id="@+id/tvStatStoppage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/more_time"
                    android:drawablePadding="8dp"
                    android:drawableTint="#00FF00"
                    android:textColor="#00FF00"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:text="上半场补时: 00:00\n下半场补时: 00:00" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件明细"
            android:textColor="#00FF00"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_event_note"
            android:drawablePadding="8dp"
            android:drawableTint="#00FF00" />

        <!-- 事件列表容器：我们会在代码里动态往这里添加行 -->
        <LinearLayout
            android:id="@+id/listSummaryEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSummaryClose"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="确 定"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#00FF00"
            app:cornerRadius="26dp"/>

    </LinearLayout>
</ScrollView>