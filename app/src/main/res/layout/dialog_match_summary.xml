<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            app:drawableStartCompat="@drawable/ic_trophy"
            android:drawablePadding="8dp"
            android:drawableTint="#4CAF50"
            android:layout_marginBottom="12dp"/>

        <!-- 统计卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#1E1E1E"
                android:gravity="center">

                <!-- 时长 -->
                <TextView
                    android:id="@+id/tvStatMatchTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_duration"
                    android:textColor="#CCCCCC"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/ic_history"
                    android:drawableTint="#AAAAAA"
                    android:layout_marginBottom="8dp"/>

                <!-- 比分 -->
                <TextView
                    android:id="@+id/tvStatGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_score"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/sports_soccer"
                    android:drawableTint="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <!-- 红黄牌行：使用居中的水平布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvStatYellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary_yellow"
                        android:textColor="#FFEB3B"
                        android:drawablePadding="4dp"
                        app:drawableStartCompat="@drawable/ic_card"
                        android:drawableTint="#FFEB3B"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/tvStatRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary_red"
                        android:textColor="#F44336"
                        android:drawablePadding="4dp"
                        app:drawableStartCompat="@drawable/ic_card"
                        android:drawableTint="#F44336"/>
                </LinearLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginBottom="8dp"/>

                <!-- 补时 -->
                <TextView
                    android:id="@+id/tvStatStoppage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_stoppage"
                    android:textColor="#00FF00"
                    android:textSize="12sp"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/more_time"
                    android:drawableTint="#00FF00"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 事件明细标题 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_event_details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                app:drawableStartCompat="@drawable/ic_event_note"
                android:drawablePadding="8dp"
                android:drawableTint="#4CAF50"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- 列表容器 -->
        <LinearLayout
            android:id="@+id/listSummaryEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnSummaryClose"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_ok"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="24dp"/>

    </LinearLayout>
</ScrollView>