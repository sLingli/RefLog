<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_dialog_rounded"
    android:clipToOutline="true" >


    <!-- 第一行：黄牌 + 红牌 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYellow"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text=""
            app:backgroundTint="#FFEB3B"
            app:cornerRadius="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRed"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text=""
            app:backgroundTint="#F44336"
            app:cornerRadius="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

    </LinearLayout>

    <!-- 第二行：伤停 + 进球 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 伤停：用医疗图标 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInjury"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text=""
            app:icon="@drawable/ic_medical"
            app:iconSize="36dp"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#2196F3"
            app:cornerRadius="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

        <!-- 进球：用足球图标 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoal"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text=""
            app:icon="@drawable/sports_soccer"
            app:iconSize="36dp"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#000000"
            app:cornerRadius="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

    </LinearLayout>

    <!-- 第三行：换人 + 取消 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 换人：用循环/交换图标 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubstitution"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text=""
            app:icon="@drawable/ic_substitute"
            app:iconSize="36dp"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#9C27B0"
            app:cornerRadius="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

        <!-- 取消：用叉号图标 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text=""
            app:icon="@drawable/outline_close_24"
            app:iconSize="36dp"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#616161"
            app:cornerRadius="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp" />

    </LinearLayout>

</LinearLayout>