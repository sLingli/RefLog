<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- 状态栏 -->

        <!-- 主计时器卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#000000"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/statusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="@string/status_first_half"
                    android:textColor="#4CAF50"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mainTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#4CAF50"
                    android:textSize="56sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>


                <TextView
                    android:id="@+id/stoppageTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"

                    android:text="00:00"
                    android:fontFamily="monospace"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#888888"

                    app:drawableStartCompat="@drawable/more_time"
                    android:drawablePadding="6dp"
                    android:drawableTint="#888888"

                    android:background="@drawable/bg_stoppage_capsule"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp" />



            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 补时计时器 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

        </com.google.android.material.card.MaterialCardView>

        <!-- 控制按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- 主控制按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mainButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="@string/btn_start"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#2E7D32"
                app:cornerRadius="14dp"

                app:icon="@drawable/baseline_play_arrow_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="#FFFFFF" />

            <!-- 结束半场按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/endHalfButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_end_button_progress"
                app:backgroundTint="@null"
                android:text="@string/btn_stop"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:visibility="gone"
                app:icon="@drawable/stop_circle"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="#CCCCCC" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="52dp"

            app:backgroundTint="#2A2A2A"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_history"
            app:iconGravity="textStart"
            app:iconSize="32dp"
            app:iconPadding="8dp"
            app:iconTint="#CCCCCC" />

    </LinearLayout>
</ScrollView>