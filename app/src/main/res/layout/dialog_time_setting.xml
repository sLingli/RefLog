<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="28dp"
    android:gravity="center">

    <!-- 中间的加减号区域 -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:layout_marginBottom="20dp">

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnDecrease"
    android:layout_width="54dp"
    android:layout_height="54dp"
    app:backgroundTint="#333333"
    app:cornerRadius="27dp"
    app:icon="@drawable/remove"
    app:iconSize="28dp"
    app:iconGravity="textStart"
    android:insetTop="0dp"
    android:insetBottom="0dp"
    android:padding="0dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="16dp">

    <TextView
        android:id="@+id/tvTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="#00E676" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unit_min_half"
        android:textSize="12sp"
        android:textColor="#888888" />
</LinearLayout>

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnIncrease"
    android:layout_width="54dp"
    android:layout_height="54dp"
    app:backgroundTint="#333333"
    app:cornerRadius="27dp"
    app:icon="@drawable/outline_add_24"
    app:iconSize="28dp"
    app:iconGravity="textStart"
    android:insetTop="0dp"
    android:insetBottom="0dp"
    android:padding="0dp" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnCancel"
    android:layout_width="0dp"
    android:layout_height="54dp"
    android:layout_weight="1"
    android:layout_marginEnd="6dp"
    app:backgroundTint="#FF3B30"
    app:cornerRadius="27dp"
    app:icon="@drawable/cancel_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
    app:iconSize="28dp"
    app:iconGravity="textStart"
    android:insetTop="0dp"
    android:insetBottom="0dp" />

<com.google.android.material.button.MaterialButton
    android:id="@+id/btnConfirm"
    android:layout_width="0dp"
    android:layout_height="54dp"
    android:layout_weight="1"
    android:layout_marginStart="6dp"
    app:backgroundTint="#00E676"
    app:cornerRadius="27dp"
    app:icon="@drawable/baseline_play_arrow_24"
    app:iconSize="32dp"
    app:iconGravity="textStart"
    android:insetTop="0dp"
    android:insetBottom="0dp" />
</LinearLayout>
    </LinearLayout>