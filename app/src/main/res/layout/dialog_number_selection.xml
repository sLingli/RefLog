<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#1E1E1E"
    android:gravity="center">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择号码"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- 队伍信息提示 -->
    <TextView
        android:id="@+id/tvTeamInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主队"
        android:textSize="14sp"
        android:textColor="#4CAF50"
        android:layout_marginBottom="16dp" />

    <!-- 号码滚轮区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- 十位数滚轮 -->
        <NumberPicker
            android:id="@+id/pickerTens"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:theme="@style/NumberPickerTheme" />

        <!-- 个位数滚轮 -->
        <NumberPicker
            android:id="@+id/pickerOnes"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:theme="@style/NumberPickerTheme" />

    </LinearLayout>

    <!-- 当前选择显示 -->
    <TextView
        android:id="@+id/tvSelectedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# 00"
        android:textSize="32sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 取消按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelNumber"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#616161"
            app:cornerRadius="12dp" />

        <!-- 确认按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmNumber"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="OK"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="12dp" />

    </LinearLayout>

</LinearLayout>
