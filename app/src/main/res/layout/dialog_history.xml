<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1E1E1E">

    <!-- 记录列表 -->

    <ImageView
        android:id="@+id/ivHistoryLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/ic_history"
        app:tint="#FFFFFF"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="300dp">

        <LinearLayout
            android:id="@+id/recordsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- 无记录提示 -->
    <TextView
        android:id="@+id/tvNoRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂无比赛记录"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearHistory"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:backgroundTint="#FF3B30"
            app:cornerRadius="16dp"
            app:icon="@drawable/outline_delete_24"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconSize="32dp"
            android:text=""
            style="@style/Widget.Material3.Button.TonalButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseHistory"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:backgroundTint="#00E676"
            app:cornerRadius="16dp"
            app:icon="@drawable/outline_close_24"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconSize="32dp"

            android:text=""
            style="@style/Widget.Material3.Button.TonalButton"/>

    </LinearLayout>

</LinearLayout>
